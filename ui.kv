MainScreen:
    name: "main"
    MDTextField:
        id: input_1
        hint_text: "Enter first number"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        size_hint_x: None
        width: 300

    MDTextField:
        id: input_2
        hint_text: "Enter second number"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint_x: None
        width: 300

    MDRectangleFlatButton:
        text: "Calculate"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        on_release: root.calculate(self.text)

    MDTextField:
        id: output
        hint_text: "Result"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        size_hint_x: None
        width: 300
        readonly: True
